---
import { userLinks } from "../data/userData.js";
---

<section class="buttons">
  {
    userLinks.map((data) => (
      <a
        href={data.link}
        class="button"
        data-astro-prefetch
        target="_blank"
        rel="nofollow noreferrer noopener"
      >
        <>
          <iconify-icon
            icon={data.icon}
            width="25"
            height="25"
            class="iconify"
          />
          <span>{data.title}</span>
        </>
      </a>
    ))
  }
</section>

<style>
  .buttons {
    margin-top: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    width: 100%;
    padding: 0 1.4rem;
  }
  .button {
    flex: 1;
    text-align: center;
    display: flex;
    gap: 3rem;
    align-items: center;
    min-height: 5dvh;
    padding: 1rem 2rem;
    background: #c6eae3; /* 기존보다 더 밝고 부드러운 민트 */
    color: #17423a;
    font-size: 1.8rem;
    text-decoration: none;
    border-radius: 12px;
    min-width: 30rem;
    width: 100%;
    border: 2px solid var(--border-color); /* 밝은 민트 → 어두운 청록 변수로 변경 */

    transition: background 0.2s, color 0.2s, border-color 0.2s;
  }

  .button:hover {
    background: linear-gradient(135deg, #a7ffeb 0%, #6ac8d2 100%);
    color: #222;
    border-color: #19e2a2; /* hover 시 더 선명한 민트 */
  }

  :global(.dark) .button {
    background: #232b2b; /* 다크 배경과 자연스럽게 */
    color: #19e2a2;
    border: 2px solid #19e2a2; /* 밝은 민트 테두리 */
  }

  :global(.dark) .button:hover {
    background: linear-gradient(135deg, #19e2a2 0%, #bafffa 100%);
    color: #222;
    border-color: #bafffa; /* hover 시 더 밝은 하늘민트 */
  }
</style>
